<Window x:Class="TableExportExcle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TableExportExcle"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="TableExportExcle"
        Width="800"
        Height="450"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Border Margin="10" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1">
                <TextBlock Margin="0,5,0,5" Text="请选择连接的环境" />
                <ComboBox />
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="2"
                        Grid.ColumnSpan="3">
                <TextBlock Margin="0,5,0,5" Text="请输入查询语句" />
                <TextBox Name="TbxSql"
                         Height="50"
                         Text="select * from Employee e;" />
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="6"
                        VerticalAlignment="Center">
                <Button Name="BtnOK"
                        Margin="0,5,0,5"
                        Click="BtnOK_Click"
                        Content="确认" />
            </StackPanel>
            <StackPanel Grid.Row="3"
                        Grid.ColumnSpan="7"
                        VerticalAlignment="Center">
                <ProgressBar Height="20" Margin="5" Name="PsbProcess"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
